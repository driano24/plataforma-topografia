// APP OPERADOR: Dise√±o Bootstrap Mobile-First
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Operador VVST</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --bg-app: #0f172a;
            --bg-card: #1e293b;
            --primary: #3b82f6;
            --success: #10b981;
            --danger: #ef4444;
            --text-main: #f8fafc;
            --text-muted: #94a3b8;
            --border: #334155;
        }

        body { 
            background-color: var(--bg-app); 
            color: var(--text-main); 
            font-family: 'Inter', sans-serif; 
            padding-bottom: 120px; /* Espacio para scroll */
            overscroll-behavior-y: none; /* Evitar rebote en m√≥vil */
        }

        /* HEADER FIJO */
        .app-header {
            background: rgba(30, 41, 59, 0.95);
            backdrop-filter: blur(10px);
            padding: 15px 20px;
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 1px solid var(--border);
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }

        /* SWITCH DE ESTADO */
        .status-toggle {
            position: relative;
            display: inline-block;
            width: 50px;
            height: 28px;
        }
        .status-toggle input { opacity: 0; width: 0; height: 0; }
        .slider {
            position: absolute; cursor: pointer; top: 0; left: 0; right: 0; bottom: 0;
            background-color: var(--danger); transition: .4s; border-radius: 34px;
        }
        .slider:before {
            position: absolute; content: ""; height: 20px; width: 20px; left: 4px; bottom: 4px;
            background-color: white; transition: .4s; border-radius: 50%;
        }
        input:checked + .slider { background-color: var(--success); }
        input:checked + .slider:before { transform: translateX(22px); }

        /* FORMULARIOS */
        .form-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: var(--text-muted);
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .form-control, .form-select {
            background-color: var(--bg-card);
            border: 1px solid var(--border);
            color: white;
            font-size: 1rem;
            padding: 12px;
            border-radius: 12px;
            transition: all 0.2s;
        }
        
        .form-control:focus, .form-select:focus {
            background-color: #253347;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
            color: white;
        }

        /* INPUT GRANDE PARA NUEVO PUNTO */
        #newPointInput {
            border: 2px solid var(--primary);
            background-color: rgba(59, 130, 246, 0.1);
            font-weight: bold;
        }

        /* BOT√ìN DE C√ÅMARA MEJORADO */
        .camera-zone {
            background: var(--bg-card);
            border: 2px dashed var(--border);
            border-radius: 16px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }
        .camera-zone.active {
            border-color: var(--success);
            background: rgba(16, 185, 129, 0.1);
        }
        .camera-zone i { font-size: 2rem; color: var(--text-muted); margin-bottom: 10px; }
        .preview-thumb {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 12px;
            display: none;
            margin-top: 10px;
            border: 2px solid var(--border);
        }

        /* BOT√ìN PRINCIPAL */
        .btn-action {
            background: linear-gradient(135deg, var(--primary) 0%, #2563eb 100%);
            border: none;
            width: 100%;
            padding: 16px;
            border-radius: 16px;
            font-weight: 800;
            font-size: 1.1rem;
            letter-spacing: 1px;
            text-transform: uppercase;
            box-shadow: 0 10px 25px -5px rgba(37, 99, 235, 0.5);
            color: white;
            transition: transform 0.2s;
        }
        .btn-action:active { transform: scale(0.98); }
        .btn-action:disabled { background: var(--border); box-shadow: none; color: var(--text-muted); }

        /* LISTA DE HISTORIAL */
        .log-card {
            background: var(--bg-card);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 10px;
            border-left: 4px solid var(--success);
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .log-info h6 { margin: 0; font-weight: 700; color: white; font-size: 1rem; }
        .log-info span { font-size: 0.75rem; color: var(--text-muted); }
        .log-coords { font-family: monospace; font-size: 0.8rem; color: var(--primary); margin-top: 4px; }

        /* MODAL */
        .modal-content { background-color: var(--bg-card); color: white; border: 1px solid var(--border); }
        .modal-header { border-bottom: 1px solid var(--border); }
        .btn-close { filter: invert(1); }

    </style>
</head>
<body>

    <script is:inline>
        const user = localStorage.getItem('vvst_user');
        const role = localStorage.getItem('vvst_role');
        if (!user) window.location.href = '/login';
        if (role !== 'operator' && role !== 'admin') {
            alert("No tienes permisos de operador");
            window.location.href = '/dashboard';
        }
    </script>

    <div class="app-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-3">
            <div class="bg-primary rounded text-white d-flex align-items-center justify-content-center fw-bold" style="width: 35px; height: 35px;">VV</div>
            <div style="line-height: 1.2;">
                <h6 class="m-0 fw-bold text-white" style="letter-spacing: 0.5px;">OPERADOR</h6>
                <small class="text-primary fw-bold" id="projName">Cargando...</small>
            </div>
        </div>
        
        <div class="d-flex align-items-center gap-3">
            <div class="d-flex align-items-center gap-2">
                <span id="statusLabel" class="badge bg-danger" style="font-size: 0.6rem;">OFF</span>
                <label class="status-toggle">
                    <input type="checkbox" id="workToggle" onchange="toggleWork(this)">
                    <span class="slider"></span>
                </label>
            </div>
            <button onclick="logout()" class="btn btn-outline-secondary btn-sm rounded-circle" style="width: 35px; height: 35px;"><i class="fas fa-power-off"></i></button>
        </div>
    </div>

    <div class="container mt-4">

        <div id="projectSelectContainer" class="mb-4">
            <div class="card bg-transparent border border-primary p-3 rounded-3">
                <label class="form-label text-primary">üìÇ PROYECTO ACTIVO</label>
                <select id="projectSelect" class="form-select" onchange="changeProject()">
                    <option value="">Cargando proyectos...</option>
                </select>
            </div>
        </div>

        <div id="workZone" style="opacity: 0.5; pointer-events: none; transition: 0.3s;">
            
            <form id="measureForm">
                
                <div class="mb-4">
                    <label class="form-label"><i class="fas fa-calendar-check me-2"></i>Campa√±a / Jornada</label>
                    <select id="campaignSelect" class="form-select fw-bold text-warning" onchange="loadCampaignLog()" required>
                        <option value="">Selecciona Proyecto...</option>
                    </select>
                </div>

                <div class="mb-4">
                    <label class="form-label"><i class="fas fa-map-marker-alt me-2"></i>Punto a Medir</label>
                    <select id="pointSelect" class="form-select fw-bold" style="font-size: 1.1rem;" onchange="checkPointMode()" required>
                        <option value="NEW_POINT" class="text-warning">‚ûï NUEVO PUNTO</option>
                    </select>
                    
                    <input type="text" id="newPointInput" class="form-control mt-2 text-uppercase" placeholder="NOMBRE DEL NUEVO PUNTO">
                    
                    <div id="duplicateAlert" class="alert alert-warning mt-2 d-flex align-items-center p-2 rounded-3" style="display:none; font-size: 0.8rem;">
                        <i class="fas fa-exclamation-triangle me-2 fs-4"></i>
                        <div><strong>¬°Atenci√≥n!</strong> Este punto ya fue registrado.</div>
                    </div>
                </div>
                
                <div class="row g-2 mb-4">
                    <div class="col-4">
                        <label class="form-label text-center w-100">NORTE (Y)</label>
                        <input type="number" step="0.001" id="pN" class="form-control text-center font-monospace" placeholder="0.000" required>
                    </div>
                    <div class="col-4">
                        <label class="form-label text-center w-100">ESTE (X)</label>
                        <input type="number" step="0.001" id="pE" class="form-control text-center font-monospace" placeholder="0.000" required>
                    </div>
                    <div class="col-4">
                        <label class="form-label text-center w-100">COTA (Z)</label>
                        <input type="number" step="0.001" id="pZ" class="form-control text-center font-monospace" placeholder="0.000" required>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">EVIDENCIA FOTOGR√ÅFICA</label>
                    <label for="pPhoto" class="camera-zone" id="camLabel">
                        <div id="camIconContainer">
                            <i class="fas fa-camera"></i>
                            <div class="small text-muted">Tocar para tomar foto</div>
                        </div>
                        <img id="photoPreview" class="preview-thumb">
                    </label>
                    <input type="file" id="pPhoto" accept="image/*" capture="environment" hidden onchange="previewFile()">
                </div>

                <button type="submit" class="btn-action">
                    <i class="fas fa-paper-plane me-2"></i> GUARDAR DATO
                </button>

            </form>
        </div>

        <div class="my-4 border-top border-secondary"></div>

        <h6 class="form-label mb-3">REGISTROS DE HOY EN ESTA CAMPA√ëA</h6>
        <div id="dailyLog"></div>

    </div>

    <div class="position-fixed bottom-0 start-50 translate-middle-x p-3" style="z-index: 1100">
        <div id="liveToast" class="toast align-items-center text-white bg-success border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fs-6 fw-bold">
                    <i class="fas fa-check-circle me-2"></i> Dato guardado correctamente.
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script is:inline>
        // VARIABLES GLOBALES
        let pid = '';
        let pointsInCurrentCampaign = [];
        let isWorking = false;
        const currentUser = localStorage.getItem('vvst_user');

        // --- INICIALIZACI√ìN ---
        init();

        async function init() {
            // 1. Cargar proyectos del usuario desde la API Real
            await loadProjectsFromAPI();
        }

        async function loadProjectsFromAPI() {
            const sel = document.getElementById('projectSelect');
            sel.innerHTML = '<option>Cargando...</option>';
            
            try {
                // LLAMADA A LA API REAL
                const res = await fetch(`/api/operations?action=get_projects_by_user&user=${currentUser}`);
                const projects = await res.json();
                
                sel.innerHTML = '';
                if(projects.length > 0) {
                    projects.forEach(p => {
                        const opt = document.createElement('option');
                        opt.value = p.id;
                        opt.text = p.name;
                        sel.add(opt);
                    });
                    
                    // Auto-seleccionar el primero y cargar sus datos
                    pid = projects[0].id;
                    document.getElementById('projName').innerText = projects[0].name;
                    await loadActiveCampaigns();
                } else {
                    sel.innerHTML = '<option>Sin proyectos asignados</option>';
                    document.getElementById('projName').innerText = 'Sin Asignaci√≥n';
                }
            } catch (e) {
                console.error(e);
                alert("Error de conexi√≥n con el servidor");
            }
        }

        function changeProject() {
            const sel = document.getElementById('projectSelect');
            pid = sel.value;
            document.getElementById('projName').innerText = sel.options[sel.selectedIndex].text;
            loadActiveCampaigns();
        }

        // --- CARGAR CAMPA√ëAS ---
        async function loadActiveCampaigns() {
            try {
                const res = await fetch(`/api/operations?action=get_campaigns&project_id=${pid}`);
                const data = await res.json();
                const sel = document.getElementById('campaignSelect');
                
                sel.innerHTML = '<option value="" disabled selected>-- Seleccionar Jornada --</option>';
                
                if(data.length === 0) {
                    sel.innerHTML = '<option value="">‚õî NO HAY CAMPA√ëAS ACTIVAS</option>';
                } else {
                    data.forEach(c => {
                        const opt = document.createElement('option');
                        opt.value = c.id;
                        opt.text = c.name;
                        sel.add(opt);
                    });
                }
            } catch(e) { console.error(e); }
        }

        // --- CARGAR LOGS ---
        async function loadCampaignLog() {
            const cid = document.getElementById('campaignSelect').value;
            if(!cid) return;

            const res = await fetch(`/api/operations?action=get_campaign_log&campaign_id=${cid}`);
            const data = await res.json();
            const div = document.getElementById('dailyLog');
            
            div.innerHTML = '';
            pointsInCurrentCampaign = [];

            if(data.length === 0) div.innerHTML = '<div class="text-muted text-center p-4 small">No hay datos en esta campa√±a a√∫n.</div>';

            data.forEach(d => {
                pointsInCurrentCampaign.push(d.point_id);
                div.innerHTML += `
                    <div class="log-card">
                        <div class="log-info">
                            <h6>${d.point_id}</h6>
                            <span><i class="far fa-clock me-1"></i>${d.time}</span>
                            <div class="log-coords">N:${parseFloat(d.north).toFixed(3)} E:${parseFloat(d.east).toFixed(3)}</div>
                        </div>
                    </div>
                `;
            });
            
            // Simulaci√≥n de puntos maestros (Si la API get_project_points no existe, usamos esto)
            // Se asume que el usuario puede escribir el punto si no hay lista maestra
            checkPointMode();
        }

        // --- INTERFAZ ---
        function checkPointMode() {
            const val = document.getElementById('pointSelect').value;
            const input = document.getElementById('newPointInput');
            const alertBox = document.getElementById('duplicateAlert');

            // En esta versi√≥n simplificada, siempre permitimos escribir el punto nuevo
            // O seleccionarlo si tuvi√©ramos una lista maestra cargada
            if(val === 'NEW_POINT') {
                input.style.display = 'block';
                input.required = true;
                
                // Verificar duplicados en tiempo real sobre el input manual podr√≠a ir aqu√≠
            } 
        }

        async function toggleWork(checkbox) {
            isWorking = checkbox.checked;
            const zone = document.getElementById('workZone');
            const label = document.getElementById('statusLabel');

            if(isWorking) {
                zone.style.opacity = '1';
                zone.style.pointerEvents = 'auto';
                label.className = 'badge bg-success';
                label.innerText = 'ONLINE';
            } else {
                zone.style.opacity = '0.5';
                zone.style.pointerEvents = 'none';
                label.className = 'badge bg-danger';
                label.innerText = 'OFFLINE';
            }
        }

        function previewFile() {
            const input = document.getElementById('pPhoto');
            const preview = document.getElementById('photoPreview');
            const icon = document.getElementById('camIconContainer');
            const label = document.getElementById('camLabel');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    icon.style.display = 'none';
                    label.classList.add('active');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // --- ENVIAR DATOS ---
        document.getElementById('measureForm').onsubmit = async (e) => {
            e.preventDefault();
            const cid = document.getElementById('campaignSelect').value;
            if(!cid) return alert("Selecciona una Campa√±a Activa");

            const btn = document.querySelector('button[type="submit"]');
            const originalText = btn.innerHTML;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> GUARDANDO...';

            const fd = new FormData();
            fd.append('action', 'upload_point'); // Action para la API
            fd.append('project_id', pid);
            fd.append('campaign_id', cid);
            
            // L√≥gica simple para nombre de punto
            let pt = document.getElementById('newPointInput').value.trim().toUpperCase();
            if(!pt) pt = "P-XX"; // Fallback
            fd.append('point_id', pt);

            fd.append('north', document.getElementById('pN').value);
            fd.append('east', document.getElementById('pE').value);
            fd.append('elevation', document.getElementById('pZ').value);
            
            if(document.getElementById('pPhoto').files[0]) {
                fd.append('photo', document.getElementById('pPhoto').files[0]);
            }

            try {
                const res = await fetch('/api/operations', { method: 'POST', body: fd });
                const d = await res.json();

                if(d.status === 'success') {
                    // Limpiar
                    document.getElementById('pN').value = '';
                    document.getElementById('pE').value = '';
                    document.getElementById('pZ').value = '';
                    document.getElementById('newPointInput').value = '';
                    
                    // Reset Foto
                    document.getElementById('pPhoto').value = '';
                    document.getElementById('photoPreview').style.display = 'none';
                    document.getElementById('camIconContainer').style.display = 'block';
                    document.getElementById('camLabel').classList.remove('active');

                    // Toast Bootstrap
                    const toastEl = document.getElementById('liveToast');
                    const toast = new bootstrap.Toast(toastEl);
                    toast.show();

                    await loadCampaignLog();
                } else {
                    alert("Error: " + d.message);
                }
            } catch(err) {
                console.error(err);
                alert("Error de conexi√≥n");
            }

            btn.disabled = false;
            btn.innerHTML = originalText;
        };

        function logout() {
            localStorage.clear();
            window.location.href = '/';
        }
    </script>
</body>
</html>